<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.huya.marksman.widget.AutoAspectFrameLayout
        android:id="@+id/bannar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@null"
        app:aspectRatio="1.78"
        app:autoAspect="width">

        <com.huya.marksman.widget.viewpager.AutoScrollViewPager
            android:id="@+id/top_flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"/>

        <LinearLayout
            android:id="@+id/ad_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="3dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp" />

    </com.huya.marksman.widget.AutoAspectFrameLayout>
</LinearLayout>
